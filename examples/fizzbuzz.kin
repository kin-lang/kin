
#                        FizzBuzz
#  FizzBuzz problem solved by using Kin Programming language
#


reka limit = injiza_amakuru("Enter the limit (must be a number): ");

reka response;
reka i = 1;

subiramo_niba(i <= limit) {
    niba (i%5 == 0 && i%3 == 0) {
        response = "FizzBuzz";
    } nanone_niba (i%5 == 0) {
        response = "Fizz";
    } nanone_niba (i%3 == 0) {
        response = "Buzz";
    } niba_byanze {
        response = i;
    }

    tangaza_amakuru(response);
}
